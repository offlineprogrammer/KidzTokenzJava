<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <FrameLayout
        android:id="@+id/share_celebrate_photo_FrameLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_15"
        android:paddingStart="@dimen/margin_20"
        android:paddingEnd="@dimen/margin_20"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/share_celebrate_ImageView"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:alpha="0.4"
            android:contentDescription="@null"
            android:scaleType="fitXY"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/share_celebrate_edit_ImageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:contentDescription="@null"
            android:padding="@dimen/margin_10"
            android:src="@drawable/ic_edit_large"
            android:visibility="gone" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimaryDark">

            <TextView
                android:id="@+id/camera_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="@dimen/margin_50"
                android:drawableTop="@drawable/ic_camera"
                android:text="@string/capture_this_moment"
                android:textColor="@android:color/white"
                android:textSize="@dimen/text_size_14" />
        </FrameLayout>
    </FrameLayout>

    <LinearLayout
        android:id="@+id/share_celebrate_desc_LinearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/share_celebrate_photo_FrameLayout">


        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/share_celebrate_desc_text_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_20"
            android:layout_marginTop="@dimen/margin_15"
            android:layout_marginEnd="@dimen/margin_20"
            android:gravity="center"
            android:hint="@string/ktz_hint_shareyourthoughts">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/share_celebrate_desc_edit_text"
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_100"
                android:layout_gravity="center_horizontal"
                android:gravity="top|left|center_vertical|center_horizontal|center|start"
                android:imeOptions="actionDone"
                android:inputType="textShortMessage"
                android:maxLength="100"
                android:maxLines="2"
                android:paddingStart="@dimen/margin_10"
                android:paddingTop="@dimen/margin_10"
                android:paddingEnd="@dimen/margin_10"
                android:paddingBottom="@dimen/margin_10"
                android:textColor="@color/colorAccent"
                android:textColorHint="@color/light_grey"
                android:textSize="@dimen/text_size_14" />
        </com.google.android.material.textfield.TextInputLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/share_celebrate_warn_LinearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/share_celebrate_desc_LinearLayout">

        <TextView
            android:id="@+id/warn_text"
            style="@style/warnText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/margin_10"
            android:layout_marginBottom="@dimen/margin_10"
            android:visibility="invisible" />

    </LinearLayout>

    <FrameLayout
        android:id="@+id/save_share_celebrate_framelayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/share_celebrate_warn_LinearLayout">
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/share_celebrate_button"
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_50"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/margin_60"
            android:layout_marginTop="@dimen/margin_20"
            android:layout_marginEnd="@dimen/margin_60"
            android:layout_marginBottom="@dimen/margin_30"
            android:background="@drawable/ktz_button_background"
            android:text="@string/ktz_button_share"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:textSize="@dimen/text_size_25">

        </androidx.appcompat.widget.AppCompatButton>
    </FrameLayout>


</androidx.constraintlayout.widget.ConstraintLayout>